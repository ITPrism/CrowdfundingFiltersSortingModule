<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.6" client="site" method="upgrade">
	<name>MOD_CROWDFUNDINGFILTERSSORTING</name>
	<author>Todor Iliev</author>
	<copyright>Copyright (C) 2017 Todor Iliev ( ITPrism.com )</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
	<authorEmail>todor@itprism.com</authorEmail>
	<authorUrl>http://itprism.com</authorUrl>
	<version>2.2</version>
	<creationDate>18 September, 2016</creationDate>
	<description><![CDATA[
    <p>Crowdfunding Filters Sorting is a module that displays links to the project list as predefined filters for sorting.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive <strong>gifts</strong>, <strong>discount codes</strong>, information about <strong>updates</strong> and information about <strong>new ITPrism extensions</strong>.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/donations/crowdfunding" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
	
    <help url="MOD_CROWDFUNDINGFILTERSSORTING_HELP_URL"/>

	<files>
	    <filename module="mod_crowdfundingfilterssorting">mod_crowdfundingfilterssorting.php</filename>
	    <filename>helper.php</filename>

		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">

                <field name="display_alphabet" type="radio" class="btn-group"
                       label="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_ALPHABET"
                       description="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_ALPHABET_DESC"
                       default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_date" type="radio" class="btn-group"
                       label="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_DATE"
                       description="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_DATE_DESC"
                       default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_popularity" type="radio" class="btn-group"
                       label="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_POPULARITY"
                       description="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_POPULARITY_DESC"
                       default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_funding" type="radio" class="btn-group"
                       label="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_FUNDING"
                       description="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_FUNDING_DESC"
                       default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!--<field name="display_fans" type="radio" class="btn-group"
                       label="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_FANS"
                       description="MOD_CROWDFUNDINGFILTERSSORTING_DISPLAY_FANS_DESC"
                       default="0">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>-->

			</fieldset>
			
			<fieldset name="advanced">
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                    
                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

            </fieldset>
		</fields>
	</config>

    <updateservers>
        <server type="extension" priority="1" name="Module - Crowdfunding Filters Sorting ( from CDN )">http://cdn.itprism.com/updates/crowdfunding/modules/mod_crowdfundingfilterssorting.xml</server>
    </updateservers>
</extension>